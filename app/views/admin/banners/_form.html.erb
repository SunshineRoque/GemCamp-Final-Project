<%= render 'admin/partial/top_nav' %>
<div class="row">
  <div class="col-2  border border-black border-top-o">
    <%= render 'admin/partial/left_nav' %>
  </div>
  <div class="col-10">
    <div class="row">
      <h1 style='text-decoration: none;'>BANNERS <%= link_to '+', class: 'btn btn-primary' %></h1>
      <div class="container">
        <%= form_with model: banner, url: url, local: true do |form| %>
          <% if banner.errors.any? %>
            <div id="error_explanation" class="alert alert-danger">
              <h2><%= pluralize(banner.errors.count, "error") %> prohibited this banner from being saved:</h2>
              <ul>
                <% banner.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <p></p>
          <p></p>
          <div>
            <%= form.file_field :preview %>
          </div>
          <p></p>
          <p></p>
          <div class="field">
            <%= form.label 'Status' %>
            <%= form.select :status, options_for_select(Banner.statuses.keys.map { |status| [status.humanize, status] }) %>
          </div>
          <p></p>
          <p></p>
          <div class="field">
            <%= form.label 'Online At' %>
            <%= form.date_field :online_at, value: params[:online_at], class: 'form-control' %>
          </div>
          <div class="field">
            <%= form.label 'Offline At' %>
            <%= form.date_field :offline_at, value: params[:offline_at], class: 'form-control' %>
          </div>
          <p></p>
          <p></p>
          <div style="margin-bottom: 10px;">
            <%= form.submit class: 'btn btn-primary' %>
            <%= link_to 'Back', admin_banners_path, class: "btn btn-primary", 'aria-current': 'page', style: 'background-color: lightblue; border: none;' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="row border border-black"></div>

