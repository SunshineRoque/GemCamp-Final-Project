<%= render 'admin/partial/top_nav' %>
<div class="row">
  <div class="col-2  border border-black border-top-o">
    <%= render 'admin/partial/left_nav' %>
  </div>
  <div class="col-10">
    <div class="row">
      <h1 style='text-decoration: none;'>BANNERS <%= link_to '+', new_admin_banner_path, class: 'btn btn-primary' %></h1>
      <div class="container">
        <div class="row">
          <% @banners.each do |banner| %>
            <div class="col-4 mb-4">
              <div class="card h-100" style="width: 100%;">
                <div class="image-container" style="margin: 5px; height: 200px; background-color: #eee;">
                  <% if banner.preview.present? %>
                    <%= image_tag banner.preview.url, class: 'card-img-top', style: 'height: 100%; width: 100%; object-fit: cover;' %>
                  <% end %>
                </div>
                <p></p>
                <td class="button">
                  <div class="btn-group" role="group">
                    <div class="row">
                      <div class="col-1"></div>
                      <div class="col"><%= link_to 'Edit', edit_admin_banner_path(banner), class: 'btn btn-warning', style:'width:80px;' %></div>
                      <div class="col"><%= button_to 'Delete', admin_banner_path(banner), method: :delete, class: 'btn btn-danger', style:'width:80px;' %></div>
                      <div class="col-1"></div>
                    </div>
                  </div>
                </td>
                <div class="card-body">
                  <div class="container border border-black">
                    <p></p>
                    <div class="card-body">
                      <p class="card-text" style="text-align: left; margin-left:30px;">Online
                        at: <%= banner.online_at&.strftime("%m/%d/%Y") %></p>
                      <p class="card-text" style="text-align: left; margin-left:30px;">Offline
                        at: <%= banner.offline_at&.strftime("%m/%d/%Y") %></p>
                      <p class="card-text" style="text-align: left; margin-left:30px;">Status: <%= banner.status %></p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
          <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
              <% if @banners.prev_page %>
                <li class="page-banner">
                  <%= link_to '« Prev', { page: @banners.prev_page }, class: 'page-link' %>
                </li>
              <% end %>

              <% (1..@banners.total_pages).each do |page| %>
                <li class="page-banner <%= 'active' if page == @banners.current_page %>">
                  <%= link_to page, { page: page }, class: 'page-link' %>
                </li>
              <% end %>

              <% if @banners.next_page %>
                <li class="page-banner">
                  <%= link_to 'Next »', { page: @banners.next_page }, class: 'page-link' %>
                </li>
              <% end %>
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row border border-black"></div>
