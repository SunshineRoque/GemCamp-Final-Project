<content class="log-in d-grid" style="grid-template-rows: 10vh 35vh; place-items: center;">
  <div class="container text-center align-self-end">
    <div class="row">
      <div class="col">
        <p></p>
        <h2>Admin Login</h2>
      </div>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin h-auto m-auto" }) do |f| %>
    <div class="container">
      <div class="row justify-content-center m-auto">
        <div class="d-flex justify-content-center w-auto">
          <div class="card-body" style="border: 1px solid #000; width: 455px; height: 310px; padding: 20px;">
            <form>
              <div class="form-group">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control",
                                  placeholder: "Email", style: "width: 420px; height: 75px; border: 1px solid #000;" %>
              </div>
              <p></p>
              <div class="form-group">
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control",
                                     placeholder: "Password", style: "width: 420px; height: 75px; border: 1px solid #000;" %>
              </div>
              <p></p>
              <% if devise_mapping.rememberable? %>
                <div class="form-check">
                  <%= f.check_box :remember_me, class: "form-check-input", style: " border: 1px solid #000;" %>
                  <%= f.label :remember_me, class: "form-check-label" %>
                </div>
              <% end %>
              <p></p>
              <div class="form-group">
                <%= f.submit "Log in", class: "form-control text-center", style: "width: 100%; border: 1px solid #000;" %>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</content>

