<%= render 'admin/partial/top_nav' %>
<div class="row">
  <div class="col-2  border border-black border-top-o">
    <%= render 'admin/partial/left_nav' %>
  </div>
  <div class="col-10">
    <div class="row">
      <h1 style='text-decoration: none;'>OFFERS <%= link_to '+', new_admin_offer_path, class: 'btn btn-primary' %></h1>
      <div class="container">
        <div class="row">
          <% @offers.each do |offer| %>
            <div class="col-4 mb-4">
              <div class="card h-100" style="width: 100%;">
                <div class="image-container" style="margin: 5px; height: 200px; background-color: #eee;">
                  <% if offer.image.present? %>
                    <%= image_tag offer.image.url, class: 'card-img-top', style: 'height: 100%; width: 100%; object-fit: cover;' %>
                  <% end %>
                </div>
                <p></p>
                <td class="button">
                  <div class="btn-group" role="group">
                    <div class="row">
                      <div class="col-1"></div>
                      <div class="col"><%= link_to 'Edit', edit_admin_offer_path(offer), class: 'btn btn-warning', style: 'width:80px;' %></div>
                      <div class="col"><%= button_to 'Delete', admin_offer_path(offer), method: :delete, class: 'btn btn-danger', style: 'width:80px;' %></div>
                      <div class="col-1"></div>
                    </div>
                  </div>
                </td>
                <div class="card-body">
                  <h5>
                    <div class="card-footer text-muted">
                      <p class="card-text"><%= offer.name %></p>
                    </div>
                  </h5>
                  <p class="card-text" style="margin-left:30px;">Quantity: <%= offer.amount %></p>
                  <p class="card-text" style="margin-left:30px;">Coin: <%= offer.coin %></p>
                  <p class="card-text" style="margin-left:30px;">Status: <%= offer.status %></p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row border border-black"></div>
