<%= render 'admin/partial/top_nav' %>
<div class="row">
  <div class="col-2 border border-black border-top-o">
    <%= render 'admin/partial/left_nav' %>
  </div>
  <div class="col-10">
    <div class="row">
      <p></p>
      <h3 class="container" style="background-color: #8bb9fe; text-align: center; align-items: center; justify-content: center">WINNER
        LIST</h3>
      <p></p>
    </div>
    <div class="row">
      <div class="container border border-black p-4">
        <%= form_with(url: admin_winners_path, method: :get, class: 'mb-3') do |f| %>
          <div class="row mb-3">
            <div class="col-md-4">
              <%= f.label :serial_number, class: 'form-label' %>
              <%= f.text_field :serial_number, value: params[:serial_number], class: 'form-control' %>
            </div>
            <div class="col-md-4">
              <%= f.label :email, class: 'form-label' %>
              <%= f.text_field :email, value: params[:email], class: 'form-control' %>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-md-4">
              <%= f.label :state, class: 'form-label' %>
              <%= f.select :state, Ticket.aasm.states.map(&:name), { include_blank: true, selected: params[:state] }, class: 'form-select' %>
            </div>
            <div class="col-md-4">
              <%= f.label :start_date, class: 'form-label' %>
              <%= f.date_field :start_date, value: params[:start_date], class: 'form-control' %>
            </div>
            <div class="col-md-4">
              <%= f.label :end_date, class: 'form-label' %>
              <%= f.date_field :end_date, value: params[:end_date], class: 'form-control' %>
            </div>
          </div>

          <%= f.submit 'Search', class: 'btn btn-primary' %>
        <% end %>

        <% @winners.each_slice(4) do |winner_slice| %>
          <div class="row mb-3">
            <% winner_slice.each do |winner| %>
              <div class="col-md-3">
                <div class="d-flex h-100">
                  <div class="card w-100">
                    <div class="card-body">
                      <h5>
                        <div class="card-footer text-muted">
                          <p class="card-text"><strong>Winner Information</strong></p>
                        </div>
                      </h5>
                      <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong>Admin Name:</strong> <%= winner.admin&.name %></li>
                        <li class="list-group-item"><strong>Item:</strong> <%= winner.item&.name %></li>
                        <li class="list-group-item"><strong>Winner's Email:</strong> <%= winner.user&.email %></li>
                        <li class="list-group-item"><strong>Address:</strong>
                          <% if winner.address.present? %>
                            <p class="card-title">Address: <%= "#{winner.address&.region&.name}, #{winner.address&.province&.name}, #{winner.address&.city&.name}, #{winner.address&.barangay&.name}, #{winner.address&.street_address}" %></p>
                          <% else %>
                            <p class="card-title">No address available</p>
                          <% end %>
                        </li>
                        <li class="list-group-item"><strong>Batch Count:</strong> <%= winner.item&.batch_count %></li>
                        <li class="list-group-item">
                          <strong>Ticket's Serial Number:</strong>
                          <p><%= winner.ticket&.serial_number %></p></li>
                        <li class="list-group-item"><strong>Price:</strong> <%= winner.price %></li>
                        <li class="list-group-item">
                          <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#winningHistoryModal" style="width: 100%;">
                            <strong>View Comment</strong>
                          </button>
                        </li>
                        <div class="modal fade" id="winningHistoryModal" tabindex="-1" role="dialog" aria-labelledby="winningHistoryModalTitle" aria-hidden="true">
                          <div class="modal-dialog" role="document">
                            <div class="modal-content">
                              <div class="modal-header">
                                <h5 class="modal-title" id="modalWinningTitle">Shared Feedback by <span style="color:darkviolet"><%=winner.user&.username%></span></h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                  <span aria-hidden="true">&times;</span>
                                </button>
                              </div>
                              <div class="modal-body" id="modalWinningBody">
                                <% if winner.picture.present? %>
                                  <%= image_tag winner.picture.url, class: 'img-fluid', alt: 'Winner Picture' %>
                                <% end %>
                                <p><span style="color: blue;%>;"><strong>Shared Comment</strong></span></p>
                                <%= winner.comment %>
                              </div>
                              <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                              </div>
                            </div>
                          </div>
                        </div>
                        <div class="container border border-black">
                          <p></p>
                          <div class="card-footer text-muted">
                            <p class="card-text">State: <%= winner.state %></p>
                          </div>
                          <div class="card-body">
                            <div class="btn-group justify-content-center" role="group">
                              <% if winner.may_submit? %>
                                <%= button_to 'Submit', submit_admin_winner_path(id: winner), method: :post, class: 'btn btn-warning mr-2' %>
                              <% end %>
                              <% if winner.may_pay? %>
                                <%= button_to 'Pay', pay_admin_winner_path(id: winner), method: :post, class: 'btn btn-success mr-2' %>
                              <% end %>
                              <% if winner.may_ship? %>
                                <%= button_to 'Ship', ship_admin_winner_path(id: winner), method: :post, class: 'btn btn-danger mr-2' %>
                              <% end %>
                              <% if winner.may_deliver? %>
                                <%= button_to 'Deliver', deliver_admin_winner_path(id: winner), method: :post, class: 'btn btn-danger mr-2' %>
                              <% end %>
                              <% if winner.may_publish? %>
                                <%= button_to 'Publish', publish_admin_winner_path(id: winner), method: :post, class: 'btn btn-danger mr-2' %>
                              <% end %>
                              <% if winner.may_remove_publish? %>
                                <%= button_to 'Remove Publish', remove_publish_admin_winner_path(id: winner), method: :post, class: 'btn btn-danger mr-2' %>
                              <% end %>
                            </div>
                          </div>
                        </div>
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
        <nav aria-label="Page navigation">
          <ul class="pagination justify-content-center">
            <% if @winners.prev_page %>
              <li class="page-item">
                <%= link_to '« Prev', { page: @winners.prev_page }, class: 'page-link' %>
              </li>
            <% end %>

            <% (1..@winners.total_pages).each do |page| %>
              <li class="page-item <%= 'active' if page == @winners.current_page %>">
                <%= link_to page, { page: page }, class: 'page-link' %>
              </li>
            <% end %>

            <% if @winners.next_page %>
              <li class="page-item">
                <%= link_to 'Next »', { page: @winners.next_page }, class: 'page-link' %>
              </li>
            <% end %>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</div>
<div class="row border border-black"></div>