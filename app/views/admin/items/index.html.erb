<%= render 'admin/partial/top_nav' %>

<div class="row">
  <div class="col-2 border border-black border-top-o">
    <%= render 'admin/partial/left_nav' %>
  </div>

  <div class="col-10">
    <div class="row mb-3">
      <div class="col-md-6">
        <h1 style="text-decoration: none;">ITEMS <%= link_to '+', new_admin_item_path, class: 'btn btn-primary' %></h1>
      </div>
    </div>

    <div class="container">
      <% @items.each do |item| %>
        <div class="card mb-3">
          <div class="card-header">
            <%= item.name %>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-6">
                <p><strong>Quantity:</strong> <%= item.quantity %></p>
                <p><strong>Min Tickets:</strong> <%= item.minimum_tickets %></p>
                <p><strong>Batch Count:</strong> <%= item.batch_count %></p>
                <p><strong>Status:</strong> <%= item.status %></p>
              </div>

              <div class="col-md-6">
                <p><strong>Online at:</strong> <%= item.online_at&.strftime("%m/%d/%Y") %></p>
                <p><strong>Offline at:</strong> <%= item.offline_at&.strftime("%m/%d/%Y") %></p>
                <p><strong>Start at:</strong> <%= item.start_at&.strftime("%m/%d/%Y") %></p>
                <p><strong>Category:</strong> <%= item.categories.pluck(:name).join(',') %></p>
              </div>
            </div>

            <div class="row mt-3">
              <div class="col-md-6">
                <%= image_tag item.image.url, style: 'width: 100%;' if item.image.present? %>
              </div>
            </div>

            <div class="row mt-3">
              <div class="col-md-12">
                <div class="button">
                  <%= link_to 'Edit', edit_admin_item_path(item), class: 'btn btn-warning' %>
                  <%= button_to '-', admin_item_path(item), method: :delete, class: 'btn btn-danger' %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render 'admin/partial/extra' %>