<%= render 'admin/partial/top_nav' %>
<div class="row">
  <div class="col-2  border border-black border-top-o">
    <%= render 'admin/partial/left_nav' %>
  </div>
  <div class="col-10">
    <div class="row">
      <h1 style='text-decoration: none;'>ITEMS <%= link_to '+', new_admin_item_path, class: 'btn btn-primary' %></h1>
      <div class="container">
        <div class="row">
          <% @items.each do |item| %>
            <div class="col-4 mb-4">
              <div class="card h-100" style="width: 100%;">
                <div class="image-container" style="margin: 5px; height: 200px; background-color: #eee;">
                  <% if item.image.present? %>
                    <%= image_tag item.image.url, class: 'card-img-top', style: 'height: 100%; width: 100%; object-fit: cover;' %>
                  <% end %>
                </div>
                <p></p>
                <td class="button">
                  <div class="btn-group" role="group">
                    <div class="row">
                      <div class="col-1"></div>
                      <div class="col"><%= link_to 'Edit', edit_admin_item_path(item), class: 'btn btn-warning', style:'width:80px;' %></div>
                      <div class="col"><%= button_to 'Delete', admin_item_path(item), method: :delete, class: 'btn btn-danger', style:'width:80px;' %></div>
                      <div class="col-1"></div>
                    </div>
                  </div>
                </td>
                <div class="card-body">
                  <h5>
                    <div class="card-footer text-muted">
                      <p class="card-text"><%= item.name %></p>
                    </div>
                  </h5>
                  <p class="card-text" style="margin-left:30px;">Quantity: <%= item.quantity %></p>
                  <p class="card-text" style="margin-left:30px;">Min Tickets: <%= item.minimum_tickets %></p>
                  <p class="card-text" style="margin-left:30px;">Batch Count: <%= item.batch_count %></p>
                  <p class="card-text" style="margin-left:30px;">Online
                    at: <%= item.online_at&.strftime("%m/%d/%Y") %></p>
                  <p class="card-text" style="margin-left:30px;">Offline
                    at: <%= item.offline_at&.strftime("%m/%d/%Y") %></p>
                  <p class="card-text" style="margin-left:30px;">Start
                    at: <%= item.start_at&.strftime("%m/%d/%Y") %></p>
                  <p class="card-text" style="margin-left:30px;">Status: <%= item.status %></p>
                  <p class="card-text" style="margin-left:30px;">Category: <%= item.categories.pluck(:name).join(',') %></p>
                  <div class="container border border-black">
                    <p></p>
                    <div class="card-footer text-muted">
                      <p class="card-text">State: <%= item.state %></p>
                    </div>
                    <div class="card-body">
                      <div class="btn-group" role="group">
                        <% if item.may_start? %>
                          <%= button_to 'Start', start_admin_item_path(id: item), method: :post, class: 'btn btn-primary mr-2' %>
                        <% end %>
                        &nbsp;
                        <% if item.may_pause? %>
                          <%= button_to 'Pause', pause_admin_item_path(id: item), method: :post, class: 'btn btn-warning mr-2' %>
                        <% end %>
                        &nbsp;
                        <% if item.may_end? %>
                          <%= button_to 'End', end_admin_item_path(id: item), method: :post, class: 'btn btn-success mr-2' %>
                        <% end %>
                        &nbsp;
                        <% if item.may_cancel? %>
                          <%= button_to 'Cancel', cancel_admin_item_path(id: item), method: :post, class: 'btn btn-danger mr-2' %>
                        <% end %>
                        &nbsp;
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
          <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
              <% if @items.prev_page %>
                <li class="page-item">
                  <%= link_to '« Prev', { page: @items.prev_page }, class: 'page-link' %>
                </li>
              <% end %>

              <% (1..@items.total_pages).each do |page| %>
                <li class="page-item <%= 'active' if page == @items.current_page %>">
                  <%= link_to page, { page: page }, class: 'page-link' %>
                </li>
              <% end %>

              <% if @items.next_page %>
                <li class="page-item">
                  <%= link_to 'Next »', { page: @items.next_page }, class: 'page-link' %>
                </li>
              <% end %>
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row border border-black"></div>
