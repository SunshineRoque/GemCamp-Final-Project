<%= render 'admin/partial/top_nav' %>
<div class="row">
  <div class="col-2  border border-black border-top-o">
    <%= render 'admin/partial/left_nav' %>
  </div>
  <div class="col-10">
    <div class="row">
      <p></p>
      <p></p>
      <h3 class="container" style="background-color: #8bb9fe; text-align: center; align-items: center; justify-content: center">INVITE
        LIST</h3>
      <p></p>
    </div>

    <%= form_with(url: admin_invites_path, method: :get, class: 'mb-3') do |f| %>
      <div class="row mb-3">
        <div class="col-md-8">
          <%= f.label :search, class: 'form-label' %>
          <%= f.text_field :search, value: params[:search], class: 'form-control', placeholder: 'Search Parent Email' %>
        </div>
        <div class="col-md-4">
          <%= f.submit 'Search', class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>

    <div class="row">
      <div class="d-flex flex-column">
        <table class="table">
          <thead>
          <tr>
            <th scope="col">Parent Email</th>
            <th scope="col">Email</th>
            <th scope="col">Total Deposit</th>
            <th scope="col">Members Total Deposit</th>
            <th scope="col">Coins</th>
            <th scope="col">Created at</th>
            <th scope="col">Coins used count</th>
            <th scope="col">Child members</th>
          </tr>
          </thead>
          <tbody>
          <% @user_with_parents.each do |user| %>
            <% if user.parent.present? %>
              <tr>
                <td><%= user.parent&.email %></td>
                <td><%= user.email %></td>
                <td><%= user.total_deposit %></td>
                <td>
                  <% if user.users.present? %>
                    <%= user.users.sum(&:total_deposit) %>
                  <% else %>
                    No Members
                  <% end %>
                </td>
                <td><%= user.coins %></td>
                <td><%= user.created_at.strftime("%m/%d/%Y - %I:%M %p") %></td>
                <td></td>
                <td>
                  <% if user.users.present? %>
                    <% user.users&.each do |child| %>
                      <%= child.email %>
                    <% end %>
                  <% else %>
                    No Members
                  <% end %>
                </td>
              </tr>
            <% end %>
          <% end %>
          </tbody>
        </table>

        <nav aria-label="Page navigation">
          <ul class="pagination justify-content-center">
            <% if @user_with_parents.prev_page %>
              <li class="page-item">
                <%= link_to '« Prev', { page: @user_with_parents.prev_page }, class: 'page-link' %>
              </li>
            <% end %>

            <% (1..@user_with_parents.total_pages).each do |page| %>
              <li class="page-item <%= 'active' if page == @user_with_parents.current_page %>">
                <%= link_to page, { page: page }, class: 'page-link' %>
              </li>
            <% end %>

            <% if @user_with_parents.next_page %>
              <li class="page-item">
                <%= link_to 'Next »', { page: @user_with_parents.next_page }, class: 'page-link' %>
              </li>
            <% end %>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</div>
<div class="row border border-black"></div>