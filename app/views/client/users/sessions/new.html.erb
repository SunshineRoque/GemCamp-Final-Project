<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container-fluid border border-black">
    <div class="row ">
      <div class="col-2 border border-black"></div>
      <div class="col-1 border border-black d-inline-flex p-2" style="text-align: center; align-items: center; justify-content: center;">Brand Image</div>
      <div class="col-4 border border-black"></div>
      <div class="col-3 border border-black">
        <div class="row ">
          <div class="col-3 border border-black d-inline-flex p-2" style="text-align: center; align-items: center; justify-content: center;">Coins</div>
          <div class="col-3 border border-black d-inline-flex p-2 " style="text-align: center; align-items: center; justify-content: center;">Claim</div>
          <div class="col-3 border border-black d-inline-flex p-2 " style="text-align: center; align-items: center; justify-content: center;">Language</div>
          <div class="col-3 border border-black d-inline-flex p-2 " style="text-align: center; align-items: center; justify-content: center;">
            <nav class="navbar navbar-light bg-light">
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent1" aria-controls="navbarSupportedContent1" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarSupportedContent1">
                <ul class="navbar-nav">
                  <li class="nav-item active">
                    <a class="nav-link" href="#"> <span class="sr-only"></span></a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="#"></a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="#"></a>
                  </li>
                </ul>
              </div>
            </nav>
          </div>
        </div>
      </div>
      <div class="col-2 border border-black"></div>
    </div>

    <div class="row mb-4"></div>
    <div class="row mb-4"></div>

    <div class="row" style="height: 50px;">
      <div class="col-2"></div>
      <div class="col-4" style="padding:0;"><%= link_to 'Log in', new_client_user_session_path, class: "btn btn-primary #{'active' if action_name == 'index' }", 'aria-current': 'page',
                                                        style: "border: 1px solid black; border-radius: 0%; width: 100%; height: 50px; " %>
      </div>
      <div class="col-4" style="padding:0;"><%= link_to 'Register', new_client_user_registration_path, class: "btn btn-primary-light #{'active' if action_name == 'index' }", 'aria-current': 'page',
                                                        style: "border: 1px solid black; border-radius: 0%; width: 100%; height: 50px;" %>
      </div>
      <div class="col-2"></div>
    </div>

    <div class="row mb-4"></div>
    <div class="row mb-4"></div>

    <div class="row" style="height: 50px;">
      <div class="col-2"></div>
      <div class="col-8" style="padding:0;"><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email",
                                                              style: "border: 1px solid black; border-radius: 0%; width: 100%; height: 50px; " %>
      </div>
      <div class="col-2"></div>
    </div>

    <div class="row mb-4"></div>
    <div class="row mb-4"></div>

    <div class="row" style="height: 50px;">
      <div class="col-2"></div>
      <div class="col-8" style="padding:0;"><%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password",
                                                                 style: "border: 1px solid black; border-radius: 0%; width: 100%; height: 50px; " %></div>
      <div class="col-2"></div>
    </div>

    <div class="row mb-4"></div>
    <div class="row mb-4"></div>

    <div class="row" style="height: 50px;">
      <div class="col-2"></div>
      <div class="col-8" style="padding:0;"><%= f.submit "Log in", class: "form-control", placeholder: "LOG IN",
                                                         style: "border: 1px solid black; width: 100%; height: 50px; " %></div>
      <div class="col-2"></div>
    </div>

    <div class="row mb-4"></div>
    <div class="row mb-4"></div>
    <div class="row mb-4"></div>
    <div class="row mb-4"></div>
    <div class="row mb-4"></div>
    <div class="row mb-4"></div>
    <div class="row mb-4"></div>
    <div class="row mb-4"></div>
    <div class="row mb-4"></div>
    <div class="row mb-4"></div>
    <div class="row mb-4"></div>
    <div class="row mb-4"></div>
    <div class="row mb-4"></div>
    <div class="row mb-4"></div>
    <div class="row mb-4"></div>
    <div class="row mb-4"></div>
    <div class="row mb-4"></div>
    <div class="row mb-4"></div>
    <div class="row mb-4"></div>


    <div class="row border border-black">
      <div class="col-2"></div>
      <div class="col-8">
        <div class="row d-flex ">
          <div class="col border border-black d-inline-flex p-2" style="text-align: center; align-items: center; justify-content: center;">Share</div>
          <div class="col border border-black d-inline-flex p-2" style="text-align: center; align-items: center; justify-content: center;">Invite</div>
          <div class="col border border-black d-inline-flex p-2" style="text-align: center; align-items: center; justify-content: center;">Lottery</div>
          <div class="col border border-black d-inline-flex p-2" style="text-align: center; align-items: center; justify-content: center;">Shop</div>
          <div class="col border border-black d-inline-flex p-2" style="text-align: center; align-items: center; justify-content: center;">
            <%= link_to 'Me', client_me_index_path, class: "nav-link #{'active' if action_name == 'sign in' }", 'aria-current': 'page' %>
          </div>
        </div>
      </div>
      <div class="col-2"></div>
    </div>

  </div>
<% end %>



