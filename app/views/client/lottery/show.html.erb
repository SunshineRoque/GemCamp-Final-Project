<div class="container-fluid border border-black">
  <div class="row">
    <div class="col-2 border border-black"></div>

    <div class="col-1 border border-black d-inline-flex p-2 text-center align-items-center justify-content-center">
      <%= link_to 'Logo', client_root_path, class: "nav-link #{'active' if action_name == 'logo'}", 'aria-current': 'page' %>
    </div>

    <div class="col-4 border border-black"></div>

    <div class="col-3 border border-black">
      <div class="row">
        <div class="col-3 border border-black d-inline-flex p-2 text-center align-items-center justify-content-center">Coins</div>
        <div class="col-3 border border-black d-inline-flex p-2 text-center align-items-center justify-content-center">Claim</div>
        <div class="col-3 border border-black d-inline-flex p-2 text-center align-items-center justify-content-center">Language</div>

        <div class="col-3 border border-black d-inline-flex p-2 text-center align-items-center justify-content-center">
          <div class="row">
            <div class="col-1 d-flex justify-content-center">
              <div id="mySidenav" class="sidenav">
                <div class="row">
                  <% if @user %>
                    <div class="row">
                      <div class="col-11">
                        <%= render 'client/partial/left_side' %>
                      </div>
                      <div class="col-1">
                        <%= render 'client/partial/right_side' %>
                      </div>
                    </div>
                  <% else %>
                    <h4><%= link_to 'Sign In', client_user_session_path, class: "nav-link", 'aria-current': 'page' %></h4>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          <nav class="navbar navbar-light bg-light" style="box-shadow: 0px 0px 8px #888888;">
            <button class="navbar-toggler hamburger-button" type="button" data-toggle="collapse" aria-expanded="false" aria-label="Toggle navigation" onclick="Nav()" style="z-index: 2">
              <div class="animated-icon"><span></span><span></span><span></span></div>
            </button>
          </nav>
        </div>
      </div>
    </div>

    <div class="col-2 border border-black"></div>
  </div>

  <div class="row mb-2"></div>
  <div class="row">
    <div class="col-2"></div>
    <div class="col-8">
      <div class="row mt-4">
        <div class="col-md-8 mx-auto">
          <div class="card" style="width: 100%;">
            <img class="card-img-top img-fluid" src="<%= @item.image.url %>" alt="Item Image">
            <div class="card-body">
              <p class="card-text"><%= @item.name %></p>
              <div class="progress">
                <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar"
                     aria-valuenow="61" aria-valuemin="0" aria-valuemax="100" style="width:61%">
                  61%
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row mt-4">
        <div class="col-md-8 mx-auto">
          <div class="container border border-gray">
            <div class="row">
              <div class="col border border-gray" style="background-color: lightgray; text-align: center; align-items: center; justify-content: center;">-</div>
              <div class="col-8 border border-gray" style="text-align: center; align-items: center; justify-content: center;">0</div>
              <div class="col border border-gray" style="background-color: lightgray; text-align: center; align-items: center; justify-content: center;">+</div>
            </div>
          </div>
        </div>
      </div>
      <div class="row mt-4">
        <div class="col-md-8 mx-auto">
          <div class="container border border-gray">
            <div class="row">
              <div class="col" style="background-color: blue; text-align: center; align-items: center; justify-content: center; color:white;">Submit</div>
            </div>
          </div>
        </div>
      </div>
      <div class="row mt-4">
        <div class="col-md-8 mx-auto">
          <div class="card w-100">
            <div class="card-body">
              <h5 class="card-title">Serial Number</h5>
              <ul class="list-group list-group-flush">
                <li class="list-group-item border">*******</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row mb-2"></div>
  <div class="row mb-4"></div>

  <%= render 'client/partial/application_down' %>
</div>

