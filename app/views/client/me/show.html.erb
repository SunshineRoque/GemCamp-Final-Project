<div class="container-fluid border border-black">
  <%= render 'client/partial/application_up' %>
  <div class="row mb-4"></div>
  <div class="row">
    <div class="col-2"></div>
    <div class="col-8">
      <div class="container border border-black">
        <div class="row">
          <div class="col-12">
            <div class="row mb-4"></div>
            <div class="row" style="margin-left: 5vh">Ticket Serial
              Number: <%= @winner.ticket&.serial_number %></p></div>
          </div>
        </div>
      </div>
      <p></p>
      <div class="row">
        <h1 class="container" style='background-color: skyblue; text-align: center; '>CLAIM PAGE</h1>
        <p></p>
        <h4 style='text-decoration: none;'>ADDRESS <%= link_to '+', new_client_address_path, class: 'btn btn-primary' %> <span style="font-style: italic; color:red;"> &nbsp; &nbsp; &nbsp; Choose Address Please!</span></h4>
        <div class="container">
          <%= form_with model: @winner, url: me_update_winners_client_me_path(@winner), method: :patch, remote: true, data: { turbo: false } do |f| %>
            <% @addresses.each_with_index do |address, index| %>
              <div class="row">
                <div class="col mx-auto">
                  <div class="card mb-4">
                    <div class="card-body">
                      <p class="card-title">
                        <%= f.radio_button :addresses_id, address.id, class: 'address-radio', checked: index.zero? %>
                        <%= "#{address&.region&.name}, #{address&.province&.name}, #{address&.city&.name}, #{address&.barangay&.name}, #{address.street_address}" %>
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
            <div class="row">
              <div class="col mx-auto">
                <%= f.submit 'Claim', class: 'btn btn-primary' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>

    </div>

    <div class="col-2"></div>
  </div>


  <div class="row mb-4"></div>

  <%= render 'client/partial/application_down' %>
</div>


