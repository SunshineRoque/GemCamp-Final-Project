<div class="container-fluid border border-black">
  <div class="row ">
    <div class="col-2 border border-black"></div>
    <div class="col-1 border border-black d-inline-flex p-2" style="text-align: center; align-items: center; justify-content: center;">
      <%= link_to 'Logo', client_root_path, class: "nav-link #{'active' if action_name == 'logo'}", 'aria-current': 'page' %>
    </div>
    <div class="col-4 border border-black"></div>
    <div class="col-3 border border-black">
      <div class="row ">
        <div class="col-3 border border-black d-inline-flex p-2" style="text-align: center; align-items: center; justify-content: center;">Coins</div>
        <div class="col-3 border border-black d-inline-flex p-2 " style="text-align: center; align-items: center; justify-content: center;">Claim</div>
        <div class="col-3 border border-black d-inline-flex p-2 " style="text-align: center; align-items: center; justify-content: center;">Language</div>
        <div class="col-3 border border-black d-inline-flex p-2 " style="text-align: center; align-items: center; justify-content: center;">
          <div class="row">
            <div class="col-1 d-flex justify-content-center">
              <div id="mySidenav" class="sidenav">
                <div class="row">
                  <% if @user %>
                    <div class="row">
                      <div class="col-11">
                        <%= render 'client/partial/left_side' %>
                      </div>
                      <div class="col-1">
                        <%= render 'client/partial/right_side' %>
                      </div>
                    </div>
                  <% else %>
                    <h4><%= link_to 'Sign In', client_user_session_path, class: "nav-link", 'aria-current': 'page' %></h4>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          <nav class="navbar navbar-light bg-light" style="box-shadow: 0px 0px 8px #888888;">
            <button class="navbar-toggler hamburger-button" type="button" data-toggle="collapse" aria-expanded="false" aria-label="Toggle navigation" onclick="Nav()" style="z-index: 2">
              <div class="animated-icon"><span></span><span></span><span></span></div>
            </button>
          </nav>
        </div>
      </div>
    </div>
    <div class="col-2 border border-black"></div>
  </div>
  <%= render 'client/partial/banner' %>
  <div class="row mb-5"></div>
  <div class="row ">
    <div class="col-2 "></div>
    <div class="col-1 border border-black d-inline-flex p-2" style="text-align: center; align-items: center; justify-content: center;" %>Winners
      Feedback
    </div>
    <div class="col "></div>
    <div class="col "></div>
    <div class="col "></div>
    <div class="col "></div>
    <div class="col-2 "></div>
  </div>
  <div class="row">
    <div class="col-2" style="margin-top: 0;"></div>
    <div class="col-8">
      <div class="row">
        <% @winners.each_with_index do |winner, index| %>
          <% if index < 4 %>
            <div class="col" style="margin: 10px; padding: 0; text-align: center; align-items: center; justify-content: center">
              <%= image_tag winner.picture.url, class: 'd-block w-100', style: 'object-fit: cover; border: 1px solid black; border-radius: 0%; width: 100%; height: 100%;  margin: auto; padding: 0; display: flex; align-items: center; justify-content: center;' if winner.picture.present? %>
            </div>
          <% end %>
        <% end %>
      </div>

      <div class="row">
        <% @winners.each_with_index do |winner, index| %>
          <% if index >= 4 %>
            <div class="col" style="margin: 10px; padding: 0; text-align: center; align-items: center; justify-content: center">
              <%= image_tag winner.picture.url, class: 'd-block w-100', style: 'object-fit: cover; border: 1px solid black; border-radius: 0%; width: 100%; height: 100%;  margin: auto; padding: 0; display: flex; align-items: center; justify-content: center;' if winner.picture.present? %>
            </div>
          <% end %>
        <% end %>
        <div class="col" style="margin: 10px; padding: 0; text-align: center; align-items: center; justify-content: center">
          <%= link_to client_share_index_path, class: 'text-decoration-none text-dark' do %>
            <div class="btn btn-primary-light border border-black m-0 d-inline-flex p-2" style="border: 1px solid black; border-radius: 0%; width: 100%; height: 100%;  margin: auto; padding: 0; display: flex; align-items: center; justify-content: center;">
              More...
            </div>
          <% end %>
        </div>
        <div class="col"></div>
        <div class="col"></div>
      </div>
    </div>
    <div class="col-2"></div>
  </div>

  <div class="row mb-5"></div>
  <div class="row ">
    <div class="col-2 "></div>
    <div class="col-1 border border-black d-inline-flex p-2" style="text-align: center; align-items: center; justify-content: center;" %>Coming
      Soon
    </div>
    <div class="col "></div>
    <div class="col "></div>
    <div class="col "></div>
    <div class="col "></div>
    <div class="col-2 "></div>
  </div>
  <div class="row">
    <div class="col-2" style="margin-top: 0;"></div>
    <div class="col-8">
      <div class="row">
        <% @items.each_with_index do |item, index| %>
          <% if index < 4 %>
            <div class="col" style="margin: 10px; padding: 0; text-align: center; align-items: center; justify-content: center">
              <%= image_tag item.image.url, class: 'd-block w-100', style: 'object-fit: cover; border: 1px solid black; border-radius: 0%; width: 100%; height: 100%;  margin: auto; padding: 0; display: flex; align-items: center; justify-content: center;' if item.image.present? %>
            </div>
          <% end %>
        <% end %>
      </div>

      <div class="row">
        <% @items.each_with_index do |item, index| %>
          <% if index >= 4 %>
            <div class="col" style="margin: 10px; padding: 0; text-align: center; align-items: center; justify-content: center">
              <%= image_tag item.image.url, class: 'd-block w-100', style: 'object-fit: cover; border: 1px solid black; border-radius: 0%; width: 100%; height: 100%;  margin: auto; padding: 0; display: flex; align-items: center; justify-content: center;' if item.image.present? %>
            </div>
          <% end %>
        <% end %>
        <div class="col" style="margin: 10px; padding: 0; text-align: center; align-items: center; justify-content: center">
          <%= link_to client_lottery_index_path, class: 'text-decoration-none text-dark' do %>
            <div class="btn btn-primary-light border border-black m-0 d-inline-flex p-2" style="border: 1px solid black; border-radius: 0%; width: 100%; height: 100%;  margin: auto; padding: 0; display: flex; align-items: center; justify-content: center;">
              More...
            </div>
          <% end %>
        </div>
        <div class="col"></div>
        <div class="col"></div>
      </div>
    </div>
    <div class="col-2"></div>
  </div>


  <div class="row mb-4"></div>
  <div class="row mb-4"></div>

  <%= render 'client/partial/application_down' %>
</div>
</div>
